{
  "name": "acelot/helpers",
  "description": "Useful PHP functions for everyday use",
  "keywords": [
    "helpers", "utilities", "array", "string", "date", "retry", "chunk", "chunk-iterator"
  ],
  "type": "library",
  "homepage": "https://github.com/acelot/helpers",
  "license": "MIT",
  "authors": [
    {
      "name": "Valeriy Protopopov",
      "email": "provaleriy@gmail.com"
    }
  ],
  "require": {
    "php": "^7.2",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "Acelot\\Helpers\\": "src"
    },
    "files": [
      "src/repeat_helper.php",
      "src/array_helpers.php",
      "src/path_helpers.php",
      "src/date_helpers.php",
      "src/retry_helpers.php",
      "src/string_helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Acelot\\Helpers\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "phpunit -c phpunit.xml"
  }
}
